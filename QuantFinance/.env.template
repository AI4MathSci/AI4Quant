# Recommended for enhanced sentiment analysis (optional)
# Without this key, sentiment analysis will usecombo of FinBert and/or keyword-based fallback
OPENAI_API_KEY=sk-your-openai-api-key-here

# Recommended for Alpha Vantage Historical news (free tier: 500 calls/day) (optional)
# Without this key, sentiment analysis loses one source of historical news.
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Variables to determine the frequency of API calls (in number of trading days two consecutive API calls are apart from each other)
OPENAI_API_FREQUENCY_MAX=60
OPENAI_API_FREQUENCY_DEFAULT=30
ALPHA_VANTAGE_API_FREQUENCY_MAX=60
ALPHA_VANTAGE_API_FREQUENCY_DEFAULT=30

# Sentiment Analysis Configuration
SENTIMENT_CLASSIFICATION_THRESHOLD=0.1
SENTIMENT_CONFIDENCE_THRESHOLD=0.5
SENTIMENT_DECAY_FACTOR=0.9
SENTIMENT_COMBO_WEIGHT=0.5
SENTIMENT_WEIGHT_DEFAULT=0.3

